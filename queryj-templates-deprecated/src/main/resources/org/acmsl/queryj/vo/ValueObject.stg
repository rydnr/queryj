group ValueObject;

source() ::= <<
<!
  Generates a value object.
!>
<if(header)>
<header>
<else>
<java_header(
  year=current_year,
  description=
  [
    first_line_description(tableName=table.name)
  ],
  timestamp=timestamp)>
<endif>
<if(generation_timestamps_enabled)>
// Generated by QueryJ using org/acmsl/queryj/vo/ValueObject.stg at <timestamp>
<endif>

<package_declaration(package=package)>

<checkers_import()>
/*
 * Importing some JDK classes.
 */
import java.io.Serializable;
<column_type_imports:import(type=it)>

<class(table=table)>
>>

first_line_description(tableName) ::= <<
<!
  Generates the first line of the generated file description.
  @param result the custom result.
!>
Value object for \<i\><tableName>\</i\>.
>>

class(table) ::= <<
<!
 Generates the class body.
 @param table the table.
!>
<class_impl(table=table, parent=table.parentTable)>
>>

class_impl(table, parent) ::= <<
<!
 Generates the class body.
 @param table the table.
 @param parent the parent table.
!>
/**
 * <[
      first_line_description(tableName=table.name)
    ]:{line |<line>}; separator="\n * ">
<class_common_javadoc()>
 */
public interface <table.voName>
<if(parent)>
    extends  Serializable,
             <parent.voName>
<else>
    extends  Serializable
<endif>

{
<if(parent)> 
    <table.nonParentAttributes:attribute_getter(attribute=it);
      separator="\n">
<else>
    <table.attributes:attribute_getter(attribute=it);
      separator="\n">
<endif>

}
>>

attribute_getter(attribute) ::= <<
<!
 Writes the getter for given attribute.
 @param attribute the attribute.
!>
/**
 * Retrieves the \<i\><attribute.name>\</i\> value.
<if(attribute.comment)>
 * @return <attribute.comment>
<else>
 * @return such information.
<endif>

 */
<type_checker(attribute=attribute)><attribute.javaType> get<attribute.nameCapitalized>();

>>
