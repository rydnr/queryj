group ConfigurationProperties;

source() ::= <<
<!
 Generates configuration properties.
!>
#//;-*- mode: java-conf-*-
<if(header)>
<header.lines:{# <it>}; separator="\n">
<else>
<header(
  year=current_year,
  description=
  [
    "Defines the DAO settings."
  ],
  timestamp=timestamp)>
<endif>
<if(generation_timestamps_enabled)>
# Generated by QueryJ using org/acmsl/queryj/ConfigurationProperties.stg at <timestamp>
<else>
# Generated by QueryJ using org/acmsl/queryj/ConfigurationProperties.stg
<endif>

<tables:dao_factory_property(
  table=it,
  engineName=engine_name,
  engineNameLowercased=engine_name.lowercased,
  repository=repository,
  basePackageName=project_package,
  baseDAOSubpackageName=typeInitMap.baseDAOSubpackageName,
  subpackageName=typeInitMap.rdbSubpackageName,
  xmlSubpackageName=typeInitMap.xmlSubpackageName,
  mockSubpackageName=typeInitMap.mockSubpackageName);
 separator="\n\n">

<if(repository_dao)>
<repository_dao_factory_property(
  engineName=engine_name,
  engineNameLowercased=engine_name.lowercased,
  repositoryLowercased=repository,
  repositoryCapitalized=repository.capitalized,
  basePackageName=base_package_name,
  baseDAOSubpackageName=typeInitMap.baseDAOSubpackageName,
  subpackageName=typeInitMap.rdbSubpackageName,
  xmlSubpackageName=typeInitMap.xmlSubpackageName,
  mockSubpackageName=typeInitMap.mockSubpackageName);
 separator="\n\n">
<endif>
>>

