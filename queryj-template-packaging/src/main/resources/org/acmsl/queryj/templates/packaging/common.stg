group common;

java_header(description, description_oneline, filename, template, C) ::= <<
<java_header_impl(
  description=description,
  description_oneline=description_oneline,
  year=C.copyright_years,
  filename=filename,
  timestamp=C.timestamp,
  template=template,
  version=C.version)>
>>

